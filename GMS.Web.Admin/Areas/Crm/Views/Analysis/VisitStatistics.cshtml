@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.Crm.Contract
@using GMS.Web
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style>
        .xzou {
            word-break: break-all;
        }
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript" src="@Url.StaticFile("/content/scripts/highcharts.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/content/scripts/highcharts.exporting.js")"></script>
    <script type="text/javascript">
        var chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'line',
                marginRight: 130,
                marginBottom: 70
            },
            title: {
                text: '回款统计',
                x: -20 //center
            },
            subtitle: {
                text: '各部门的回款统计',
                x: -20
            },
            xAxis: {
                categories: [@Html.Raw(ViewData["Branchs"].ToString())],
                labels: {
                    rotation: 0,
                    style: {
                        fontSize: '7px',
                        //fontFamily: 'Verdana, sans-serif',
                        writingMode: 'tb-rl'    //文字竖排样式
                    }
                }
            },
            yAxis: {
                title: {
                    text: '金额 (元)'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/>' +
                    this.x + ': ' + this.y + '元';
                }
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: -10,
                y: 100,
                borderWidth: 0
            },
            series: [{
                name: '本月预计回款',
                data: [@Html.Raw(ViewData["Month"].ToString())]
            }, {
                name: '最近三月预计回款',
                data: [@Html.Raw(ViewData["Quarter"].ToString())]
            }, {
                name: '今年预计回款',
                data: [@Html.Raw(ViewData["Year"].ToString())]
            }]
        });


        var dates = $("#startDate, #endDate").datepicker({
            dateFormat: "yy-mm-dd",
            defaultDate: "+1w",
            changeMonth: true,
            numberOfMonths: 2,
            onSelect: function (selectedDate) {
                var option = this.id == "startDate" ? "minDate" : "maxDate",
				instance = $(this).data("datepicker"),
				date = $.datepicker.parseDate(
					instance.settings.dateFormat ||
					$.datepicker._defaults.dateFormat,
					selectedDate, instance.settings);
                dates.not(this).datepicker("option", option, date);
            }
        });
    </script>
}
<div>

    @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search", @class = "well form-inline" }))
    {
        <div>
            开始时间：
            @Html.TextBox("startDate", null, new { @class = "m-wrap small" })

            结束时间：
            @Html.TextBox("endDate", null, new { @class = "m-wrap small" })

            <button type="submit" class="btn">查询 <i class="icon-search"></i></button>

        </div>
    }

</div>

<div class="breadcrumb">
    <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
</div>

